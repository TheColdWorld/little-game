<Window x:Class="little_game.client.wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:little_game.client.wpf"
        mc:Ignorable="d"
        Title="" Height="450" Width="800"
        WindowStyle="None">
    <Grid Background="Transparent">

        <DockPanel VerticalAlignment="Top" HorizontalAlignment="Left" Height=" 20" Width="800">
            <Menu DockPanel.Dock="Top" Background="Transparent" BorderBrush="Transparent">
                <MenuItem Header="检查服务器" Click="server_Click"/>
                <MenuItem Header="关于" Click="About_Click"/>
                <Button VerticalAlignment="Top" HorizontalAlignment="Right" Height="20" Width="20" Background="Transparent" BorderBrush="Transparent" Click="Exit_btn_Click">
                    <Image Source="exit.png" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </Menu>
        </DockPanel>
    </Grid>
</Window>

<Window x:Class="little_game.client.wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:little_game.client.wpf"
        mc:Ignorable="d"
        Title="" Height="450" Width="800"
        WindowStyle="ToolWindow">
    <Grid x:Name="MainGrid" >
        <DockPanel Height="20" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button x:Name="but1"  Width="auto" Height="20" BorderBrush="Transparent" Background="Transparent" Click="server_Click"/>
            <Button x:Name="but2"  Width="auto" Height="20" BorderBrush="Transparent" Background="Transparent" Click="About_Click"/>
        </DockPanel>
        <Button HorizontalAlignment="Right" VerticalAlignment="Top"  Height=" 20" Width="20" BorderBrush="Transparent" >
            <Button.Background>
                <ImageBrush ImageSource="exit.png" Stretch="UniformToFill" TileMode="None" />
            </Button.Background>
        </Button>
    </Grid>
</Window>
